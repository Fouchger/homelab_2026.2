[Unit]
Description=MikroTik healthcheck (homelab_2026.2)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=root
EnvironmentFile=-/root/.config/homelab_2026_2/state.env
ExecStart=/opt/homelab/mikrotik/healthcheck.sh
